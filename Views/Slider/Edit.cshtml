@model SliderEditModel
@{
    Layout = "_AdminLayout";
}
<form method="post" enctype="multipart/form-data">
    <main class="container my-3">
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Slider Güncelle</h5>
                        <a asp-action="Index" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-list"></i>
                        </a>
                    </div>
                    <div class="card-body">


                        <div class="row mb-3">
                            <label asp-for="Baslik" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Baslik" class="form-control">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Index" class="col-sm-2 col-form-label">Index</label>
                            <div class="col-sm-10">
                                <input asp-for="Index" class="form-control">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Aktif" class="col-sm-2 col-form-label">Aktif</label>
                            <div class="col-sm-10">
                                <input asp-for="Aktif" class="form-check-input" checked>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>




                    </div>

                </div>

            </div>
            <div class="col-md-3">
                <div class="card shadow">
                    <div class="card-body">
                        <img src="~/img/@Model.ResimAdi" class="img-thumbnail" alt="">
                        <input asp-for="Resim" class="form-control mt-3">
                    </div>
                </div>

            </div>

    </main>
</form>