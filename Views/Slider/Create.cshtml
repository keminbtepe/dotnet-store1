@model SliderCreateModel
@{
    Layout = "_AdminLayout";
}
<main class="container my-3">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Slider Ekle</h5>
                    <a asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">

                        <div class="row mb-3">
                            <label asp-for="Baslik" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Baslik" class="form-control">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Resim" class="col-sm-2 col-form-label">Resim</label>
                            <div class="col-sm-10">
                                <input asp-for="Resim" class="form-control">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Index" class="col-sm-2 col-form-label">Index</label>
                            <div class="col-sm-10">
                                <input asp-for="Index" class="form-control">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Aktif" class="col-sm-2 col-form-label">Aktif</label>
                            <div class="col-sm-10">
                                <input asp-for="Aktif" class="form-check-input" checked>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</main>