@{
    Layout = "_AdminLayout";
}   @* layout *@

<div class="row">
    <div class="col-md-9">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürün Ekle</h5>
                <a href="urun.html" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form>
                    <div class="row mb-3">
                        <label for="UrunAdi" class="col-sm-2 col-form-label">Ürün Adı</label>
                        <div class="col-sm-10">
                            <input type="text" id="UrunAdi" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="urunAciklama" class="col-sm-2 col-form-label">Ürün Açıklama</label>
                        <div class="col-sm-10">
                            <textarea id="urunAciklama" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="UrunFiyat" class="col-sm-2 col-form-label">Fiyat</label>
                        <div class="col-sm-10">
                            <input type="text" id="UrunFiyat" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="UrunAktif" class="col-sm-2 col-form-label">Aktif</label>
                        <div class="col-sm-10">
                            <input type="checkbox" id="UrunAktif" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="UrunAnasayfa" class="col-sm-2 col-form-label">Anasayfa</label>
                        <div class="col-sm-10">
                            <input type="checkbox" id="UrunAnasayfa" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="urunFiyat" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select class="form-select">
                                <option value="" selected>Seçiniz</option>
                                <option value="1">Telefon</option>
                                <option value="2">Telefon</option>
                                <option value="3">Beyaz Eşya</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow">
            <div class="card-body">
                <img src="img/1.jpeg" class="img-thumbnail" alt="">
                <input type="file" class="form-control mt-3">
            </div>
        </div>
    </div>
</div>