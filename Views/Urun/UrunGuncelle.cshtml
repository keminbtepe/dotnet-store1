@model UrunUpdateModel
@{
    Layout = "_AdminLayout";
}   @* layout *@

<form method="post" enctype="multipart/form-data">
<div class="row">
    <div class="col-md-9">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürün Güncelle</h5>
                <a href="urun.html" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                    <div class="row mb-3">
                        <input type="hidden" name="Id" value="@Model.Id" >
                        <label asp-for="UrunAdi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UrunAdi" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Fiyat" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Fiyat" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aktif" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Aktif" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Anasayfa" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Anasayfa" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="KategoriId" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select asp-for="KategoriId" class="form-select">
                                <option value="" selected>Seçiniz</option>

                                @foreach (var kategori in ViewBag.Kategoriler)
                                {
                                    <option value="@kategori.Id">@kategori.KategoriAdi</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
            
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow">
            <div class="card-body">
                <img src="~/img/@Model.ResimAdi" class="img-thumbnail" alt="">
                <input asp-for="ResimDosyasi" class="form-control mt-3">
            </div>
        </div>
    </div>
</div>
    </form>