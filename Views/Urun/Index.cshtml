@model List<Urun>
@{
    Layout = "_AdminLayout";
}   @* layout *@
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürünler</h5>
                <a asp-controller="Urun" asp-action="Urunkaydet" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th style="width: 20px;">Id</th>
                                <th style="width: 80px;">Resim</th>
                                <th>Ürün Adı</th>
                                <th>Fiyat</th>
                                <th>Aktif</th>
                                <th>Anasayfa</th>
                                <th>Kategori</th>
                                <th style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="~/img/@item.Resim" class="img-fluid" alt="">
                                    </td>
                                    <td>@item.UrunAdi</td>
                                    <td>@item.Fiyat ₺</td>
                                    @if (item.Aktif)
                                    {
                                        <td>
                                            <i class="fa-solid fa-circle-check text-success"></i>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                                        </td>
                                    }

                                    @if (item.Anasayfa)
                                    {
                                        <td>
                                            <i class="fa-solid fa-circle-check text-success"></i>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                                        </td>
                                    }
                                    <td>@item.Kategori.KategoriAdi</td>
                                    <td>
                                        <a asp-controller="Urun" asp-action="UrunGuncelle" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>