@model KategoriCreateModel
@{
    Layout = "_AdminLayout";
}   @* layout *@

<main class="container my-3">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Kategori Ekle</h5>
                    <a asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Kategori" asp-action="Create">
                        <div class="row mb-3">
                            <label asp-for="KategoriAdi" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="KategoriAdi" class="form-control">
                                <span asp-validation-for="KategoriAdi" class="text-danger "></span> @* eror mesajı *@
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Url" class="form-control">
                                <span asp-validation-for="Url" class="text-danger "></span> @* eror mesajı *@
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}  
