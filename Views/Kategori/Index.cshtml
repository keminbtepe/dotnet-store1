@model List<KategoriGetModels>

@{
    Layout = "_AdminLayout";
}   @* layout *@

    <main class="container my-3">
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Kategoriler</h5>
                        <a asp-controller="Kategori" asp-action="Create" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mb-0">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Id</th>
                                        <th>Kategori Adı</th>
                                        <th>Url</th>
                                        <th>Ürün Sayısı</th>
                                        <th style="width: 90px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kategori in Model)
                                {
                                    <tr>
                                        <td>@kategori.Id</td>
                                        <td>@kategori.KategoriAdi</td>
                                        <td>@kategori.Url</td>
                                        <td>@kategori.UrunSayisi</td>
                                        <td>
                                            <a asp-controller="Kategori" asp-action="Edit" asp-route-id="@kategori.Id" class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                            <a href="urun.html" class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-right-long"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                   

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>
